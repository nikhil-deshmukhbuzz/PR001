<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="page-title float-left">
                            <h1>Distributor Bill</h1>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col col-lg-3">
                                    <div class="form-group">
                                        <label for="distributorlist" class=" form-control-label">Distributor</label>
                                        <select id="distributorlist" name="distributorlist" data-placeholder="Choose a Distributor..." class="standardSelect form-control" tabindex="1" ng-model="ddl.selectedDistributorList" ng-disabled="!isAdmin"></select>
                                    </div>
                                </div>
                                <div class="col col-lg-3">
                                    <label for="month" class=" form-control-label">Month</label>
                                    <select id="month" name="month" data-placeholder="Choose a Month..." class="standardSelect form-control" tabindex="2" ng-model="ddl.selectedMonth"></select>
                                </div>
                                <div class="col col-lg-3">
                                    <label for="year" class=" form-control-label">Year</label>
                                    <select id="year" name="year" data-placeholder="Choose a Year..." class="standardSelect form-control" tabindex="3" ng-model="ddl.selectedYear"></select>
                                </div>

                                <div class="col col-lg-offset-1">
                                    <div class="form-group">
                                        <label for="tot" class=" form-control-label" style="padding-top: 30px;">Total: <b>{{totalAmount | INR}}</b></label>
                                        
                                    </div>
                                </div>
                                <div class="col col-lg-offset-1" style="padding-top: 25px;">
                                    <button type="button" style="min-width:100px" class="btn btn-primary" ng-click="show()">SHOW</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-scroll">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Bill Number</th>
                                        <th>Order Number</th>
                                        <th>Distributor Name</th>
                                        <th>Client Name</th>
                                        <th>Commision (%)</th>
                                        <th>Payble Amount (Rs)</th>
                                        <th>CreatedOn</th>
                                        <th>Status</th>
                                        <th ng-show="isAdmin"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in data">
                                        <td>{{item.BillNumber}}</td>
                                        <td>{{item.Order.OrderNumber}}</td>
                                        <td>{{item.Distributor.DistributorName}}</td>
                                        <td>{{item.ClientMaster.ClientName}}</td>
                                        <td class="text-align-right">{{item.Commision}}</td>
                                        <td class="text-align-right">{{item.PaybleAmount | INR}}</td>
                                        <td class="min-width-100">{{item.CreatedOn | date:'dd-MM-yyyy'}}</td>
                                        <td>
                                            <span class="badge badge-warning" ng-if="item.PaymentStatus.Status == 'Pending'"> {{item.PaymentStatus.Status}} </span>
                                            <span class="badge badge-success" ng-if="item.PaymentStatus.Status == 'Paid'"> {{item.PaymentStatus.Status}}  </span>
                                            <span class="badge badge-danger" ng-if="item.PaymentStatus.Status == 'Unpaid'"> {{item.PaymentStatus.Status}}  </span>
                                        </td>

                                        <td ng-show="isAdmin">
                                            <span class="icon-container pointer" data-toggle="modal" data-target="#mediumModal" ng-click="edit(item.DistributorBillID)">
                                                <span class="ti-pencil-alt"></span>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div><!-- .animated -->
    </div>
