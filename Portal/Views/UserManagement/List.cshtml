<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="page-title float-left">
                            <h1>User Management</h1>
                        </div>
                        <button type="button" style="min-width:100px" class="btn btn-primary float-right" data-toggle="modal" data-target="#mediumModal" ng-click="add()" ng-show="false">ADD</button>
                    </div>
                    <div class="card-body table-scroll" ng-init="initialize()">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>UserName</th>
                                    <th>Profile</th>
                                    <th>Mobile No</th>
                                    <th style="text-align: center">Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in data">
                                    <td>{{item.Name}}</td>
                                    <td>{{item.UserName}}</td>
                                    <td>
                                        <span class="badge badge-success" ng-if="item.ProfileMaster.ProfileName == 'Distributor'"> {{item.ProfileMaster.ProfileName}} </span>
                                        <span class="badge badge-secondary" ng-if="item.ProfileMaster.ProfileName == 'Customer'"> {{item.ProfileMaster.ProfileName}} </span>
                                    </td>
                                    <td>{{item.MobileNo}}</td>
                                    <td style="text-align: center">
                                        <span ng-if="item.IsActive" class="pointer" ng-click="changeStatus(item.UserID,false)"><i class="fa fa-check-circle text-success"></i></span>
                                        <span ng-if="!item.IsActive" class="pointer" ng-click="changeStatus(item.UserID,true)"><i class="fa fa-times-circle text-danger"></i></span>
                                    </td>
                                    <td>
                                        <span class="icon-container pointer" data-toggle="modal" data-target="#mediumModal" ng-click="edit(item.UserID)">
                                            <span class="ti-key"></span>
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div>